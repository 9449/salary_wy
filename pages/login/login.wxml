<view class="v1">

 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext">登录</view>
  
     <!-- 手机号 -->
     <view class="phoneCs">
       <input placeholder="请输入账号" maxlength="15" type="text" bindinput="content" />
     </view>
     <!-- 密码 -->
     <view class="passwordCs">
       <input placeholder="请输入密码" maxlength="20" type="password" bindinput="password" />
     </view>
     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" bindtap="login">登录</button>
     </view>
   </view>
 </view>
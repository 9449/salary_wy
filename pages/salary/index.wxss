.salaryContainer {
  height: 100%;
  background: #eee;
}

.salaryContainer .operation {
  display: flex;
  height: 100rpx;
}
.operation .edit {
  width: 250rpx;
  display: flex;
  justify-content: space-around;
}
.edit view {
  margin: auto 0;
  width: 120rpx;
  height: 60rpx;
  background-color: green;
  border-radius: 20rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
}

.edit .add {
  background: pink;
  color: #000;
}

.tips {
  margin-top: 20rpx;
  font-size: 36rpx;
  text-align: center;
}


.operation .searchItem {
  flex: 1;
  display: flex;
  align-items: center;
  margin: auto 10rpx;
  height: 80rpx;
}

.searchItem .content {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
}

.content input {
  flex: 1;
  padding: 0 60rpx;
  background: #fafafa;
  border-radius: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.content .icon-sousuoxiao {
  position: absolute;
  height: 60rpx;
  width: 60rpx;
  font-size: 24rpx;
  left: 0;
  text-align: center;
  line-height: 60rpx;
}
.content .icon-qingchu {
  position: absolute;
  height: 60rpx;
  width: 60rpx;
  font-size: 24rpx;
  right: 0;
  text-align: center;
  line-height: 60rpx;
}

.searchItem .search{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
}



.history .headers {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  background: turquoise;
  font-size: 30rpx;
  font-weight: 700;
}

.headers view {
  width: 200rpx;
  text-align: center;
}


.infos {
  height: calc(100vh - 200rpx);
}

.infos .infoItem {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.infoItem view {
  width: 200rpx;
  text-align: center;
}
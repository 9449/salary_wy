.detailContainer {
  padding-bottom: 100rpx;
}


/* 选项 */
.detailContainer .detailItem {
  margin: 2rpx 0;
  background: #fff;
}

.detailItem .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 100rpx;
}

.title input {
  background: #eee;
  width: 200rpx;
  height: 60rpx;
  padding: 0 10rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 26rpx;
}

.content {
  height: 480rpx;
  background: #fff;
  padding: 0 30rpx;
  overflow: hidden;
  transition: height 1s;
}

.content .item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}


.content input {
  background: #eee;
  width: 200rpx;
  height: 60rpx;
  padding: 0 10rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 26rpx;
}

.edit {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  z-index: 999;
}

